---
import BigText from '@shared/ui/BigText/index'
import Paragraph from '@shared/ui/Paragraph/index'
import styles from './styles.module.scss'

interface Props {
  heading: string;
  paragraph: string;
  time: string;
}

const { heading, paragraph, time } = Astro.props;
---

<div class={styles.service_card}>
  <div class="flex flex-col items-start p-4">    
    <span>{time}</span>
    <BigText text={heading} bigTextType="services--card" />
    <Paragraph text={paragraph} margin="mt-4" paragraphType="dark" />
  </div>
</div>