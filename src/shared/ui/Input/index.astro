---
import styles from "./styles.module.scss";

export interface Props {
    margin?: string;
    inputType: string | "default";
    placeholder?: string;
}

const { margin, inputType, ...rest } = Astro.props;

const inputClass = `${styles.input} ${styles[`input--${inputType}`]} ${margin ? margin : ""}`;
---

<input class={inputClass} {...rest} required />
